{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability for the main window, enabling core permissions and devtools toggling.",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:webview:allow-internal-toggle-devtools",
    "updater:default",
    "updater:allow-check",
    "updater:allow-install",
    "process:allow-restart",
    "process:default",
    "clipboard-manager:allow-read-text",
    "clipboard-manager:allow-write-html",
    "clipboard-manager:allow-write-text",
    "dialog:default",
    "dialog:allow-open",
    "fs:default",
    "fs:allow-read",
    "shell:allow-spawn",
    "shell:allow-kill",
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "oracle-sidecar",
          "sidecar": true,
          "args": true
        }
      ]
    }
  ],
  "platforms": ["macOS"]
}
