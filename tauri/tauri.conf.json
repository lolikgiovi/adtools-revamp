{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "AD Tools",
  "version": "1.2.6",
  "identifier": "com.adtools.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1234",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:tauri"
  },
  "app": {
    "windows": [
      {
        "title": "AD Tools",
        "width": 1280,
        "height": 768,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "app",
      "dmg"
    ],
    "icon": [
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "externalBin": [
      "oracle-sidecar"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://adtools.lolik.workers.dev/update/manifest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDEyOTlCMTkwNkM1MjNBNzgKUldSNE9sSnNrTEdaRWhyUjBOam9SMGtqYVUwN0FhUWZGZXlIT1o5TGdBRldWRnZ4WEkvR3psdDkK"
    }
  }
}
