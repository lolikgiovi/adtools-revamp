{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability for the main window, enabling core permissions and devtools toggling.",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:webview:allow-internal-toggle-devtools",
    "updater:default",
    "updater:allow-check",
    "updater:allow-install",
    "process:allow-restart",
    "process:default"
  ],
  "platforms": ["macOS"]
}
